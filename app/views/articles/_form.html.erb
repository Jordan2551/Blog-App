<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <%= form_for @article do |f| %>

          <% if @article.errors.any? %>
              <div id="error_explanation" style="color:indigo">
                <h2>
                  <%= @article.errors.count %> Errors have prevented the article from being saved:
                </h2>
                <ol>
                  <%= @article.errors.full_messages.each do |msg| %>
                      <li>
                        <%= msg %>
                      </li>
                  <% end %>
                </ol>
              </div>
          <% end %>

          <div class="form-group">

            <p>
              <%= f.label :title, class: "control-label" %><br>
              <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
            </p>
            <p>
              <%= f.label :content, class: "control-label" %><br>
              <%= f.text_area :content, class: "form-control", placeholder: "Content" %>
            </p>
            <p>
              <%= f.label :num, class: "control-label" %><br>
              <%= f.text_field :num, class: "form-control", placeholder: "Number" %>
            </p>

          </div>

          <div class="form-group">
            <div class="row">
            <p>
              <%= f.label :category, class: "control-label" %><br>
              <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
              <%end%>
            </p>
            <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
          </div>

          </div>
          </div>
          </div>

      <% end %>
