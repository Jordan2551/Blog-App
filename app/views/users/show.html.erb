<p id="notice"><%= notice %></p>

<h1 class="text-center">Welcome to <%= @user.username %>'s Profile Page</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 text-center profile-margin">
		<%= gravatar_for @user, size: 150%>
		<h4 class="profile-margin"><%= @user.username %>'s articles</h4>
	</div>
</div>

<div align="center">
  <%= will_paginate @user_articles %>
</div>

<%= render 'articles/articles_listing', obj: @user_articles%>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
